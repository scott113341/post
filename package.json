{
  "name": "post",
  "version": "3.0.0",
  "description": "Self-contained website to send postcards via the Lob API.",
  "author": "Scott Hardy",
  "repository": "git@github.com:scott113341/post.git",
  "homepage": "https://github.com/scott113341/post",
  "bugs": "https://github.com/scott113341/post/issues",
  "private": true,
  "scripts": {
    "build": "better-npm-run build",
    "dev": "better-npm-run dev"
  },
  "betterScripts": {
    "build": {
      "command": "rimraf dist && node bin/compile",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "app:*"
      }
    },
    "dev": {
      "command": "node bin/server.js --ignore dist --ignore coverage --ignore src",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*",
        "PORT": 3002
      }
    }
  },
  "license": "MIT",
  "dependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-react": "^7.25.9",
    "babel-loader": "^9.2.1",
    "better-npm-run": "0.0.11",
    "canvg": "^4.0.2",
    "classnames": "2.2.5",
    "csjs-inject": "1.0.1",
    "debug": "2.6.9",
    "express": "^4.21.1",
    "fs-extra": "0.30.0",
    "html-webpack-plugin": "^5.6.3",
    "lodash": "^4.17.21",
    "prettier": "^3.3.3",
    "react": "15.3.2",
    "react-dom": "15.3.2",
    "react-frame-component": "0.6.6",
    "react-redux": "4.4.5",
    "redux": "3.6.0",
    "redux-thunk": "2.1.0",
    "rimraf": "2.5.4",
    "webpack": "^5.96.1",
    "webpack-dev-middleware": "^7.4.2",
    "yargs": "6.3.0"
  }
}
