{
  "name": "post",
  "version": "2.0.1",
  "description": "Self-contained website to send postcards via the Lob API.",
  "author": "Scott Hardy",
  "repository": "git@github.com:scott113341/post.git",
  "homepage": "https://github.com/scott113341/post",
  "bugs": "https://github.com/scott113341/post/issues",
  "private": true,
  "scripts": {
    "clean": "rimraf dist",
    "compile": "better-npm-run compile",
    "lint": "eslint bin build config server src tests",
    "lint:fix": "npm run lint -- --fix",
    "start": "better-npm-run start",
    "dev": "better-npm-run dev",
    "test": "better-npm-run test",
    "test:dev": "npm run test -- --watch",
    "deploy": "better-npm-run deploy",
    "codecov": "cat coverage/*/lcov.info | codecov"
  },
  "betterScripts": {
    "compile": {
      "command": "rimraf dist && node bin/compile",
      "env": {
        "DEBUG": "app:*"
      }
    },
    "dev": {
      "command": "nodemon bin/server --ignore dist --ignore coverage --ignore tests --ignore src",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*",
        "PORT": 3002
      }
    },
    "deploy": {
      "command": "npm run clean && npm run compile && push-dir --dir=dist --branch=gh-pages --cleanup --verbose",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "app:*"
      }
    },
    "start": {
      "command": "node bin/server",
      "env": {
        "DEBUG": "app:*"
      }
    },
    "test": {
      "command": "node ./node_modules/karma/bin/karma start build/karma.conf",
      "env": {
        "NODE_ENV": "test",
        "DEBUG": "app:*"
      }
    }
  },
  "license": "MIT",
  "dependencies": {
    "babel-loader": "6.2.5",
    "babel-plugin-transform-runtime": "6.15.0",
    "babel-preset-es2015": "6.18.0",
    "babel-preset-react": "6.16.0",
    "babel-preset-stage-0": "6.16.0",
    "babel-runtime": "6.18.0",
    "better-npm-run": "0.0.11",
    "blueimp-canvas-to-blob": "3.4.0",
    "classnames": "2.2.5",
    "csjs-inject": "1.0.1",
    "css-loader": "0.25.0",
    "cssnano": "3.8.0",
    "debug": "2.6.9",
    "extract-text-webpack-plugin": "1.0.1",
    "file-loader": "0.9.0",
    "fs-extra": "0.30.0",
    "html-webpack-plugin": "2.24.0",
    "imports-loader": "0.6.5",
    "ip": "1.1.3",
    "json-loader": "0.5.4",
    "lodash": "4.17.2",
    "node-sass": "3.10.1",
    "normalize.css": "5.0.0",
    "postcss-loader": "1.0.0",
    "react": "15.3.2",
    "react-dom": "15.3.2",
    "react-frame-component": "0.6.6",
    "react-redux": "4.4.5",
    "react-router": "2.8.1",
    "redux": "3.6.0",
    "redux-thunk": "2.1.0",
    "rimraf": "2.5.4",
    "sass-loader": "4.0.2",
    "style-loader": "0.13.1",
    "url-loader": "0.5.7",
    "webpack": "1.13.2",
    "yargs": "6.3.0"
  },
  "devDependencies": {
    "babel-core": "^6.17.0",
    "babel-eslint": "^7.0.0",
    "babel-plugin-istanbul": "^2.0.1",
    "chai": "^3.4.1",
    "chai-as-promised": "^6.0.0",
    "chai-enzyme": "^0.5.0",
    "cheerio": "^0.22.0",
    "codecov": "^1.0.1",
    "connect-history-api-fallback": "^1.3.0",
    "enzyme": "^2.0.0",
    "eslint": "^3.0.1",
    "eslint-config-semistandard": "^7.0.0",
    "eslint-config-standard": "^6.0.0",
    "eslint-config-standard-react": "^4.0.0",
    "eslint-plugin-babel": "^3.2.0",
    "eslint-plugin-promise": "^3.3.0",
